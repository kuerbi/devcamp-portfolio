 <div class="col-md-4">
    <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumb_image, class: "card-img-top" unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
        <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
        <%= portfolio_item.subtitle %>
        </p>
        <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
            <%= button_to "Edit", edit_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>
            <%= button_to "Delete", portfolio_path(portfolio_item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>
        </div>
        </div>
    </div>
    </div>
</div>